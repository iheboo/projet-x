@model List<Product>

<div class="text-center">
  <div class="container mt-3">
    <h1 class="display-4">All Products</h1>
    <table class="table border rounded">
      <tbody>
        @foreach (Product? product in Model)
        {
          <tr>
            <td><a href="products/@product.ProductId">@product.Name</a></td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>

