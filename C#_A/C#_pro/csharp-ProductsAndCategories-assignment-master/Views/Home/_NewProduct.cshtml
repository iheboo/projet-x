@model Product

<div class="container mt-3">
  <h1 class="display-4">New Product</h1>

  <form asp-action="CreateProduct" asp-controller="Home" method="post">
    <div class="container mt-3 border rounded">
      <div class="row mb-3 mt-3">
        <label asp-for="Name" class="col-sm-2 col-form-label">Name:</label>
        <div class="col-sm-10">
          <input class="form-control" asp-for="Name">
          <span class="text-danger" asp-validation-for="Name"></span>
        </div>
      </div>

      <div class="row mb-3 mt-3">
        <label asp-for="Description" class="col-sm-2 col-form-label">Description:</label>
        <div class="col-sm-10">
          <textarea class="form-control" asp-for="Description"></textarea>
          <span class="text-danger" asp-validation-for="Description"></span>
        </div>
      </div>

      <div class="row mb-3">
        <label asp-for="Price" class="col-sm-2 col-form-label">Price:</label>
        <div class="col-sm-10">
          <input type="number" asp-for="Price">
          <span class="text-danger" asp-validation-for="Price"></span>
        </div>
      </div>

      <div class="mb-3">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </div>
  </form>
  
</div>