@{
    ViewData["Title"] = "Home Page";
}
@model Dish
<div class="text-center">
    <h1 class="display-4">Add a new Dish!</h1>
    <p><a href="/">Home</a> | Add a Dish</p>
</div>
<div>
    <form asp-action="Add"  asp-controller="Home">
        <div class="form-group">
            <label asp-for="Name"></label>
            <span asp-validation-for="Name" class="text-danger"></span>
            <input asp-for="Name" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Chef"></label>
            <span asp-validation-for="Chef" class="text-danger"></span>
            <input asp-for="Chef" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Tastiness"></label>
            <span asp-validation-for="Tastiness" class="text-danger"></span>
            <select asp-for="Tastiness" class="form-control">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Calories"></label>
            <span asp-validation-for="Calories" class="text-danger"></span>
            <input asp-for="Calories" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <span asp-validation-for="Description" class="text-danger"></span>
            <input asp-for="Description" class="form-control">
        </div>
        <input type="submit" value="Add Dish" class="btn btn-success">
    </form>
</div>